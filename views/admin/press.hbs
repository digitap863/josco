<main id="main" class="main">

    <div class="pagetitle">

        <section class="section dashboard">
            <div class="row">
                <!-- Left side columns -->
                <div class="col-lg-12">
                    <div class="row">
                        <!-- Top Selling -->
                        <div class="col-12">
                            <div class="card top-selling overflow-auto">
                                <section>
                                    <div class="container">
                                        <div class="row">
                                            <div class="text-end mt-2 mb-2">
                                                <a href="/admin/add-press"><button class="btn btn-success">Add
                                                        Press</button></a>
                                            </div>
                                            <table class="table mt-5" id="usersTable">
                                                <thead>
                                                    <tr>
                                                        <th scope="col">No.</th>
                                                        <th scope="col">Heading</th>
                                                        <th scope="col">sub heading</th>
                                                        <th scope="col">Image</th>
                                                        <th scope="col"></th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    {{#each press}}
                                                    <tr>
                                                        <td></td>
                                                        <td>{{this.heading}}</td>
                                                        <td>{{this.subheading}}</td>
                                                        <td><img src="/images/press/{{this.img.[0]}}"
                                                                style="height: 50px; width: 50px;" alt=""></td>
                                                        <td><a style="color: white; text-decoration: none;"
                                                                href="/admin/edit-press/{{this._id}}"><button
                                                                    class="btn btn-success">Edit</button></a>
                                                            <a style="color: white; text-decoration: none;"
                                                                href="/admin/delete-press/{{this._id}}"
                                                                onclick="return confirm('do you want to delete {{this.name}}')"><button
                                                                    class="btn btn-danger">delete</button></a>
                                                        </td>
                                                    </tr>
                                                    {{/each}}
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </section>
                            </div>
                        </div><!-- End Top Selling -->
                    </div>
                </div><!-- End Left side columns -->
            </div>
        </section>

</main><!-- End #main -->

<script>
    var table = document.getElementsByTagName('table')[0],
        rows = table.getElementsByTagName('tr'),
        text = 'textContent' in document ? 'textContent' : 'innerText';

    for (var i = 1,len = rows.length; i < len; i++) {
        rows[i].children[0][text] = i;
    }
</script>